/*使屏幕变暗 */
.pay-choose-popup-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */
.pay-choose-popup-list {
  min-height: 50%;
  width: 100%;
  padding-bottom: 20px;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.pay-choose-popup-list .pay-popup-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 10px 8px 0;
  border-bottom: 1rpx solid #ddd;
}

.pay-choose-popup-list .pay-popup-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 10px;
  height: 2rem;
  border-bottom: 1rpx solid #ddd;
}

.pay-choose-popup-list .pay-popup-list-item .pay-item-title {
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay-choose-popup-list .pay-popup-list-item .pay-item-title .balance {
  color: #e91717;
  font-size: 0.8em;
  margin-left: 10px;
}

.pay-choose-popup-list .pay-popup-list-item .pay-item-title image {
  width: 1.5rem;
  height: 1.5rem;
  margin-right: 10px;
}

.pay-choose-popup-list .pay-popup-list-item .pay-item-title-disable {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #CECECE;
}

.pay-choose-popup-list .pay-popup-list-item .pay-item-title-disable .balance {
  font-size: 0.8em;
  margin-left: 10px;
}

.pay-choose-popup-list .pay-popup-list-item .pay-item-title-disable image {
  width: 1.5rem;
  height: 1.5rem;
  margin-right: 10px;
}

.pay-amount{
   color: #e91717;
}

.input-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 8px 10px;
  height: 35px;
  line-height: 35px;
}

.input-item .title {
  width: 20%;
  text-align: right;
}

.input-item .input-area {
  width: 60%;
  padding-left: 10px;
}

.input-item .input-area input{
  border: 1rpx solid #000;
  padding: 8px 10px;
}

.input-item .get-sms-code {
  width:34%;
  color:#fff;
  background-color:#259b24;
  height:120%;
  text-align:center;
  line-height:42px;
  font-size: 14px;
}

.input-item .get-sms-code text {
  /* padding: 10px 15px; */
}

.input-item .get-sms-code .disabled-sms-code {
  background-color:#DCDCDC;
  color:#808080;
  
}
.dget-sms-code-null {
  width:34%;
  color:rgb(253, 61, 61);
  background-color:#d3d3d3;
  height:120%;
  text-align:center;
  line-height:42px;
  font-size: 14px;
}
