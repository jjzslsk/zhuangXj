/* pages/me/me.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}

.avatar-area {
  background-color: #fff;
  padding: 10px 0;
}

.avatar-area .icon {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-area .icon image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.avatar-area .content {
  width: calc(80% - 40px);
}

.set-up {
  width: 40px;
  text-align: center;
}

.set-up-title {
  width: 40px;
  font-size: 12px;
  display: block;
  color: '#7c7c7c';
}

.avatar-area .content .user-set {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}

.avatar-area .content .content-item-mt {
  margin-top: 6px;
}

.avatar-area .content .my-money-title {
  color: #7c7c7c;
  font-size: 15px;
}

.avatar-area .content .momey-num {
  color: #97442a;
  margin-left: 20px;
  font-size: 14px;
}

.avatar-area .content .momey-num .wd-top-up {
  font-size: 0.8em;
}

.avatar-area .content .go-top-up {
  color: #97442a;
  position: absolute;
  right: 40px;
  font-size: 0.8em;
}

.avatar-area .content i-icon {
  position: absolute;
  right: 5px;
}

.collect-footprint {
  display: flex;
  justify-content: space-between;
  padding: 8px 30px;
  background-color: #fff;
}

.collect-footprint .cf-item {
  text-align: center;
  color: #999;
  font-size: 14px;
}

.my-order-area, .ship-address-area {
  margin-top: 10px;
  background-color: #fff;
}

.my-order-area .title-item, .ship-address-area .title-item {
  /* height: 30px;
  line-height: 30px; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 10px;
  border-bottom: 1rpx solid #ddd;
}

.my-order-area .title-item .title, .ship-address-area .title-item .title {
  font-weight: bold;
}

.my-order-area .title-item .sel-all, .ship-address-area .title-item .sel-all {
  /* position: absolute;
  right: 20px; */
  color: #7c7c7c;
}

.my-order-area .my-order-tap{
  padding: 0 20px;
}

/* .my-order-area .title-item i-icon, .ship-address-area .title-item  i-icon{
  position: absolute;
  right: 2px;
} */
.horizontal{
  padding: 12px;
}
.my-order-area .order-type-item {
  /* width: 20%; */
  width: 22%;
  text-align: center;
  font-size: 0.7em;
  /* padding: 10px 2px; */
  margin-left: 8px;
  padding:5px 0;
}

.my-order-area .order-type-item .icon {
  width: 40%;
  display: flex;
  margin-left: 30%;
  position: relative;
 
}

.my-order-area .order-type-item .icon image {
  height: 25px;
}

.ship-address-area .address-list {
  padding: 8px 10px;
  color: #7c7c7c;
}

.ship-address-area .address-list .phone {
  position: absolute;
  right: 10px;
}

.order-tip {
  width: 1.5em;
  height: 1.5em;
  line-height: 1.5em;
  background-color: #fff;
  border: 1rpx solid #db2121;
  border-radius: 50%;
  position: absolute;
  top: -5px;
  right: 0.5em;
  color: #db2121;
  font-size: 0.9em;
}

.iSpin {
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(102, 102, 102, 0.267);
  z-index: 1000;
}

.iSpin image {
  width: 100%;
  height: 100%;
  margin: auto;
  position: relative;
  top: 30%;
  left: 34%;
}

.items {
  width: calc(100% - 40px);
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
  padding: 0;
  margin: -20px 20px 10px 20px;
}

.item-title {
  padding: 15px;
  font-size: 0.9em;
  border-bottom: 1px #ddd solid;
}

.grid-item {
  text-align: center;
  padding: 5px 0;
}

.grid-item .grid-icon,.grid-item button .grid-icon {
  width: 90%;
  display: flex;
  justify-content: center;
  margin: 0 auto;
  position: relative;
}

.grid-item .grid-icon image,.grid-item button .grid-icon image  {
  width: 50%;
  height: 37px;
}

.grid-item .grid-text{
  max-width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  font-size: 14px;
  margin-top: 5px;
  color: #1c2438;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.grid-item button{
   border: none;
   padding: 0;
   line-height:1;
}

.grid-item button .grid-text {
  max-width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  font-size: 14px;
  margin-top:8px;
  color: #1c2438;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}