/* pages/myOrder/myOrder.wxss */

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 25%;
  color: #434343;
}

.active {
  color: #259b24;
  border-bottom: 4rpx solid #259b24;
}

swiper {
  height:calc(100vh - 88rpx);
  background-color: #f5f5f5;
}

.scroll-area{
  height:100%;
}

.notice-hint{
  height: 30px;
  line-height: 30px;
  max-height: 30px;
  text-align: center;
  color: #e91717;
  font-size: 13px;
}

.scroll-area-noce{
  height:calc(100% - 30px);
}

.shop-list{
  margin-top: 10px;
  background-color: #FFFFFF;
}

.shop-list .order-code-state{
  display: flex;
  justify-content: space-between;
  padding: 8px 10px;
}

.shop-list .order-code-state .order-state-0{
  color: #259b24;
}

.shop-list .order-code-state .order-state-1{
  color: #AAAAAA;
}

.shop-list .order-code-state .order-state-2{
  color: #AAAAAA;
}

.shop-list .order-code-state .order-state-3{
  color: #AAAAAA;
}

.shop-list .goods-list {
  margin-top: 10px;
  background-color: #fff;
}

.shop-list .goods-list .goods-item {
  display: flex;
  padding: 8px 10px;
}

.shop-list .goods-list .goods-item .goods-img {
  width: 30%;
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.shop-list .goods-list .goods-item .goods-img image {
  height: 80px;
}

.shop-list .goods-list .goods-item .goods-content {
  width: 70%;
  padding: 0 10px;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-list .goods-list .goods-item .goods-content .goods-name {
  margin-bottom: 10px;
}

.goods-list .goods-item .goods-content .goods-name .spec-name {
  font-size: 0.8em;
  color: #6c6c6c;
  word-break:break-all; 
}

.distribution {
  color: #cecece;
  font-size: 0.9em;
}


.shop-list .goods-list .goods-item .goods-content .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.shop-list .goods-list .goods-item .goods-content .price-num .price { 
  color: #6c6c6c;
  font-size: 14px;
}

.shop-list .goods-list .goods-item .goods-content .price-num  .goods-num{
  text-align: right;
}

.shop-list .logistics{
  padding: 0 10px;
  color: #AAAAAA;
  font-size: 0.8em;
}

.shop-list .remark{
  padding: 0 10px;
  color:#999999;
  font-size: 0.8em;
}

.shop-list .cal-num{
  text-align: right;
  padding: 0 10px 8px 10px;
  color: #e91717;
  font-size: 0.8em;
}

.shop-list .order-footer{
  display: flex;
  justify-content: flex-end;
  margin: 0 10px;
  padding: 8px 0;
  font-size: 0.8em;
  border-top: 1rpx solid #DDDDDD;
}

.shop-list .order-footer .btn-item{
  padding: 3px 10px;
  border-radius: 5px;
  margin-left: 10px;
}

.shop-list .order-footer .cancel-order{
  color: #000000;
  border: 1rpx solid #000000;
}

.shop-list .order-footer .pay-now{
  color: #259b24;
  border: 1rpx solid #259b24;
}

.shop-list .order-footer .remind-delivery{
   color: #000000;
  border: 1rpx solid #000000;
}

.shop-list .order-footer .confirm-goods{
   color: #000000;
  border: 1rpx solid #000000;
}

.shop-list .order-footer .eva{
   color: #000000;
  border: 1rpx solid #000000;
}

.footer-hint view{
   background: transparent;
}

.radio-group {
  border-bottom: 1px solid #ddd;
}

.radio-group .radio {
  display: block;
  border-top: 1px solid #ddd;
  padding: 10px;
}

.page__hd {
  text-align: center;
  padding: 1rem 0;
}

.iSpin {
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:rgba(102, 102, 102, 0.267);
  z-index: 1000;
}

.iSpin image{
  width: 100%;
  height: 100%;
  margin: auto;
  position: relative;
  top:30%;
  left:34%;
}

.other-cancel-reason{
  padding: 0 10px;
  margin-bottom: 20px;
}

.other-cancel-reason textarea{
  height: 3rem;
  padding: 5px;
  margin: 0 10px 0 30px;
  width: calc(100% - 40px);
  border: 1px solid #DDDDDD;
  background-color: #f1f1f1;
}
