/* pages/addAddress/addAddress.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.save-btn {
  background-color: #259b24;
  color: #fff;
  height: 37px;
  line-height: 37px;
  max-height: 37px;
  text-align: right;
  padding: 0 10px;
}

.hint-color {
  color: #80848f;
}

.list-item {
  padding: 0 0 0 15px;
  background-color: #fff;
}

.list-item .item-content {
  padding: 12px 0;
  color: #495060;
  width: 100%;
  font-size: 14px;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e9eaec;
}

.list-item .item-content .picker {
  position: absolute;
  left: 90px;
  text-align: left;
  width: calc(100% - 90px);
}

.list-item .item-content .picker .picker-address {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item .set-def-item {
  padding: 12px 0;
  color: #495060;
  width: 100%;
  font-size: 14px;
  display: flex;
  align-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e9eaec;
}

.list-item .item-content .title, .list-item .set-def-item .title {
  min-width: 65px;
  padding-right: 10px;
}

.list-item .item-content .icon {
  padding-right: 8px;
}

.list-item .set-def-item image {
  width: 24px;
  height: 24px;
  margin-left: 10px;
}
