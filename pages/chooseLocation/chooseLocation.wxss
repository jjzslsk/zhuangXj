/* pages/chooseLocation/chooseLocation.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.page_row {
  padding: 3rpx 10px;
  background-color: #259b24;
  display: flex;
  height: 37px;
  line-height: 37px;
  max-height: 37px;
}

.search {
  background-color: #FFFFFF;
  border-radius: 10rpx;
  width: 100%;
  height: 29px;
  line-height: 29px;
  max-height: 29px;
  margin-top: 4px;
}

.search input {
  margin-left: 35px;
  height: 100%;
}

.searchcion {
  margin: 5px 0 0 5px;
  position: absolute;
  left: 10px;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.scroll-area {
  height: calc(100% - 37px);
}

.cur-location {
  padding: 10px 8px;
  background-color: #fff;
}

.location-recently-title {
  padding: 10px 8px;
  background: #eee;
}

.location-recently-list {
  padding: 0 8px 10px 8px;
  background-color: #fff;
}

.location-recently-list .location-recently-list-item {
  text-align: center;
  margin-top: 10px;
}

.row-item {
  width: 80%;
  padding: 5px;
  border: 1rpx solid#DDDDDD;
}

.i-index-address-title {
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
}

.i-index-address-item {
  padding: 10px 8px;
  border-bottom: 1rpx solid #ddd;
}
