/* pages/reflectTopUp/reflectTopUp.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}


.choose-item {
  padding: 0 0 0 15px;
  background-color: #fff;
}

.choose-item .item-content {
  padding: 12px 0;
  color: #495060;
  width: 100%;
  font-size: 14px;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e9eaec;
}

.choose-item .item-content .title {
  min-width: 65px;
  padding-right: 10px;
}

.choose-item .item-content .content{
   width: calc(100% - 90px);
}

.choose-item .item-content .please-sel{
   color:#80848f;
}

.choose-item .item-content .icon {
  padding-right: 8px;
}

.amount-area{
  padding: 12px 15px;
  color: #495060;
  background-color: #FFFFFF;
  width: 100%;
  font-size: 14px;
  border-bottom: 1rpx solid #e9eaec;
}

/* .amount-area .amount-title{

} */

.amount-area .amount-item{
  display: flex;
  margin-top: 10px;
  min-height: 2.4rem;
  align-items: center;
}

.amount-area .amount-item .amount-unit{
  color: #000000;
  font-size: 1.5rem;
  display: flex;
  align-items: center;
}

.amount-area .amount-item .amount{
  width: calc(100% - 2rem);
  display: flex;
  align-items: center;
}
.amount-area .amount-item .amount input{ 
  width:  calc(100% - 20px);
  /* margin-top: 0.25rem; */
  margin-left: 10px;
  margin-right: 10px;
  font-size: 1.4rem;
  height: 100%;
  display: flex;
  align-items: center;
}

.amount-hint{
  padding: 12px 15px;
  color: #495060;
  background-color: #FFFFFF;
  width: 100%;
  font-size: 14px;
}

.agreement{
  padding: 12px 15px;
  width: 100%;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
}

.agreed-icon{
  width: 20px;
  height: 20px;
  position: absolute;
  margin-top: 10px;
}

.agreed-text{
  margin-left: 25px;
}

.pay-text{
  color:#481af0;
}

.submit-info{
  margin: 30px 20%;
  width: 60%;
  background-color: #259b24;
  color: #FFFFFF;
  text-align: center;
  padding: 8px 10px;
  border-radius: 20px;
}

.verify-code-dialog{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index:99;
  background: rgba(0, 0, 0, 0.4); 
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  /* display: none; */
}

.verify-code-dialog .dialog-area{
  background: #FFFFFF;
  width: 80%;
  padding: 8px 10px;
  border-radius: 8px;
}

.verify-code-dialog .dialog-area .dialog-title{
  text-align: center;
}

.verify-code-dialog .dialog-area .dialog-phone{
  text-align: center;
  color:#999999;
  margin-top: 10px;
}

.verify-code-dialog .dialog-area .dialog-input-arae{
  width: 100%;
  display: flex;
  margin-top: 10px;
}

.verify-code-dialog .dialog-area .dialog-input-arae .dialog-input{
  width: calc(100% - 6em - 10px);
  margin-right:10px;
  background: #f2f2f2;
  border:1px solid #DDDDDD;
  border-radius: 5px;
  padding: 5px;
}

.verify-code-dialog .dialog-area .dialog-input-arae .code-item{
  width: 6em;
  background: #259b24;
  text-align: center;
  color: #FFFFFF;
  border-radius: 5px;
  padding: 5px;

}

.verify-code-dialog .dialog-area .dialog-input-arae .code-item-dis{
  width: 6em;
  background: #CECECE;
  text-align: center;
  border-radius: 5px;
  padding: 5px;
}


.verify-code-dialog .dialog-area .dialog-btn-area{
  display: flex;
  justify-content: center;
  justify-items: center;
  margin-top: 10px;
}

.verify-code-dialog .dialog-area .dialog-btn-area .cancel-item{
  width: 48%;
  margin-right: 2%;
  height: 40px;
  line-height: 40px;
  border-radius: 8px;
  background: #CECECE;
  text-align: center;
}


.verify-code-dialog .dialog-area .dialog-btn-area .ok-item{
  width: 48%;
  margin-left: 2%;
  height: 40px;
  line-height: 40px;
  border-radius: 8px;
  background: #259b24;
  text-align: center;
  color: #FFFFFF;
}
