/* pages/pictureOrderList/pictureOrderList.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.scroll-area {
  height: 100%;
}

.polist-list{
  padding: 8px 10px;
}

.polist-list .polist-item{
  display: flex;
  background-color: #FFFFFF;
  border-radius: 8px;
  border:1px solid #DDDDDD;
  box-shadow:1px 1px 2px #DDDDDD;
  margin-bottom: 10px;
  padding: 8px;
  color: #999999;
}

.polist-list .polist-item .order-img{
  width: 25%;
  display: flex;
  justify-content: center;
}

.polist-list .polist-item .order-img image{
  width: 80%;
  height: 80px;
}

.polist-list .polist-item .order-content{
  width: 75%;
  font-size: 0.8em;
}

.polist-list .polist-item .order-content .order-content-item{
  display: flex;
}

.polist-list .polist-item .order-content .order-content-item .content-title{
  width: 5em;
}

.polist-list .polist-item .order-content .order-content-item .content-info{
  width: calc(100% - 5em);
}

.polist-list .polist-item .order-content .order-content-item .content-info.shop-name-item{
  display:flex;
  position: relative;
}

.polist-list .polist-item .order-content .order-content-item .content-info.shop-name-item .shop-name{
  width: calc(100% - 5em);
}

.polist-list .polist-item .order-content .order-content-item .content-info.shop-name-item .order-state{
  width: 4em;
  color: #ff6a6c;
  border: 1px solid #ff6a6c;
  border-radius: 10px;
  padding: 0 0.5em;
  display:flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top:0;
  right:0;
  z-index: 99;
}

.polist-list .polist-item .order-content .order-content-item .content-info .price{
  color: #ff6a6c;
}
