/* pages/goodsList/goodsList.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.search-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 39px;
  line-height: 39px;
  max-height: 39px;
  padding: 0 10px;
}

.search-area .search {
  background-color: #fff;
  border-radius: 10rpx;
  /* width: calc(100% - 37px); */
  width: 100%;
  height: 30px;
  line-height: 30px;
  max-height: 30px;
}

.search-area .search .hint {
  margin-left: 35px;
  height: 100%;
  font-size: 0.9em;
}

.search-area .search .hint-color {
  color: #ddd;
}

.search-area .search input {
  margin-left: 35px;
  height: 100%;
}

.search-area .searchcion {
  margin: 5px 0 0 5px;
  position: absolute;
  left: 10px;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

/* .search-area .layout-type {
  margin-top: 5px;
  padding-top: 5px;
}

.search-area .layout-type image {
  width: 30px;
  height: 30px;
} */

.sort-icon{width:12px;position: absolute;z-index: 999;left: 35%;margin-top: 2px;height: 10px;}
.sort-icon2{width:12px;position: absolute;z-index: 999;left: 80%;margin-top: 2px;margin-left: 10px;}

.tab-head {
  border-bottom: 1rpx solid #ddd;
}

.scroll-area {
  height: calc(100% - 82px);
}

.list-item {
  padding: 8px 0;
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
}

.horizontal .icon {
  width: 30%;
  display: flex;
  justify-content: center;
}

.horizontal .icon image {
  width: 80%;
  height: 80px;
}

.horizontal .content {
  width: 70%;
}

.horizontal .content .list-itemName {
  font-size: 14px;
}

.horizontal .content .content-item-mt {
  margin-top: 8px;
}

.new-price {
  color: #e91717;
}

.old-price {
  color: #cecece;
  text-decoration: line-through;
  font-size: 0.8em;
  margin-left: 20px;
}

.evaluate-area {
  color: #cecece;
  font-size: 0.8em;
  display: flex;
  justify-content: space-between;
  padding-right: 10px;
}

.evaluate-area .good-eva {
  margin-left: 10px;
}

.shop-name-area{
  color: #cecece;
  font-size: 0.8em;
}

.distance {
  margin-left: 4px;
}

.shop-name-area .shop-type{color: red;font-size: 0.7em;margin-left: 5px;}

.iSpin {
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1000;
}

.iSpin image{
  width: 100%;
  height: 100%;
  margin: auto;
  position: relative;
  top:30%;
  left:34%;
}