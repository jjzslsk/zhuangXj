/* pages/setUp/setUp.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.scroll-area {
  height: 100%;
}

.list-item {
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
}

.list-item .item {
  display: flex;
  justify-content: space-between;
  padding: 8px 10px;
  height: 30px;
  line-height: 30px;
  max-height: 30px;
}

.list-item-mt {
  margin-top: 20px;
}

.out-login {
  background-color: #fff;
}

.out-login .out-login-item {
  margin-top: 20px;
  height: 30px;
  line-height: 30px;
  margin-bottom: 30px;
  text-align: center;
  color: #259b24;
  padding: 8px 10px;
}
