.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.edit-btn {
  height: 37px;
  line-height: 37px;
  width: 100%;
  background-color: #259b24;
  text-align: right;
  color: #fff;
}

.edit-btn .edit-txt {
  padding: 0 10px;
}

.scroll-area {
  height: calc(100% - 80px);
}

.shop-car-item {
  padding: 8px 0;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
}

.shop-car-item .radio {
  width: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px 0 8px 10px;
}

.shop-car-item .radio image {
  width: 30px;
  height: 30px;
}

.shop-car-item .icon {
  min-width: 30%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.shop-car-item .icon image {
  width: 80%;
  height: 80px;
}

.shop-car-item .content {
  width: calc(70% - 30px);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-car-item .content .shop-name{
  display: flex;
  padding: 8px 0;
}

.shop-car-item .content .shop-name text{
  margin: 0 5px;
}

.shop-car-item .goods-title {
  padding-right: 10px;
}

.distribution {
  color: #cecece;
  font-size: 0.9em;
}

.shop-car-item .goods-title .spec-name {
  font-size: 0.8em;
  color: #6c6c6c;
}

.shop-car-item .content .price-num {
  line-height: 25%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-car-item .content .price-num .unit-price {
  color: #e91717;
  width: 50%;
  text-align: left;
  padding: 8px 0;
}

.shop-car-item .content .price-num .unit-price .old-price {
  color: #cecece;
  text-decoration: line-through;
  font-size: 0.8em;
  margin-left: 2px;
}

.shop-car-item .content .price-num .buy-num {
  width: 50%;
  justify-content: flex-end;
  margin-right: 10px;
}

.shop-car-item .content .price-num .buy-num .num-btn {
  font-size: 1.2em;
  padding: 8px 15px;
  font-weight: bold;
}

.shop-car-item .content .price-num .buy-num .num-text {
  border: 1rpx solid #ddd;
  padding: 8px 10px;
}

.shop-car-item .content .price-num .buy-num input {
  width:2rem;
  text-align: center;
}

.footer {
  display: flex;
  position: absolute;
  bottom: 0;
  background-color: #f5f5f5;
  height: 40px;
  line-height: 40px;
  max-height: 40px;
  width: 100%;
  justify-content: space-between;
  border-top: 1rpx solid #ddd;
}

.footer .radio-all-btn {
  width: 25%;
  display: flex;
}

.footer .radio-all-btn .radio-all {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10px;
}

.footer .radio-all-btn .radio-all image {
  width: 30px;
  height: 30px;
}

.footer .cal-price-item {
  width: 45%;
  text-align: left;
}

.footer .cal-price-item .cal-price {
  color: #e91717;
}

.footer .settle-price {
  width: 30%;
  padding-right: 10px;
  background-color: #259b24;
  color: #fff;
  text-align: center;
}
.footer .settle-priceRed {
  background-color: #E02F25;
}

.iSpin {
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1000;
}

.iSpin image{
  width: 100%;
  height: 100%;
  margin: auto;
  position: relative;
  top:30%;
  left:34%;
}

.settle-price-collect {
  height: 30px;
  line-height: 30px;
  width: 4rem;
  border:rgb(37, 155, 36) solid 1px;
  border-radius:20px;
  padding: 0 15px;
  font-size: 14px;
}
.settle-price-but {
  display:flex;
  justify-content:center;
  align-items:center;
  text-align:center;
}

.carNull {
  text-align: center;
}
.carNull text{
  color: #A6A6A6;
}
.nullBut {
  height: 4rem;
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nullBut .button {
  background: #259b24;
  width: 8rem;
  height: 3rem;
  color: #fff;
  margin-top: 2rem;
  font-size: 1.2rem;
  line-height: 3rem;
  border-radius: 4px;
}
