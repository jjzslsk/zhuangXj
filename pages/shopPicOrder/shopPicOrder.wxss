/* pages/shopPicOrder/shopPicOrder.wxss */
@import "../../utils/flex.wxss";
.body{width: 100%;height: 100vh;}
.scroll-area {height: 100%;padding: 10px;box-sizing:border-box;}

.tips1{text-align: center;font-size: 0.9em;margin-top: 5px;}
.tips2{text-align: center;font-size: 0.7em;margin-top: 5px;}
.img-info{height: 300px;}
.tips-image{width:100%;margin-top: 10px;}
.picked-img-info{padding: 10px;box-sizing:border-box;}
.picked-img-item{padding: 5px;box-sizing:border-box;}
.pick-img-btn{width: 100%;height: 80px;line-height: 30px;border-radius: 5px;background: #DDDDDD;color: #999999;text-align: center;padding-top: 20px;box-sizing:border-box;}
.picked-img-count{font-size:0.7em !important;color:#999999;}
.font-size-big{font-size: 2em;}
.picked-img{width: 100%;height: 80px;border-radius: 5px;border:1px #DDDDDD solid;}
.img-delete{background: red;width: 20px;height: 20px;line-height: 20px;text-align: center;font-size: 1.0em;color: #FFFFFF;position: absolute;right: 0;border-radius: 50%;margin-top: -5px;}
.owner-info{padding: 10px;box-sizing:border-box;font-size: 0.8em;}
.owner-info-title{text-align: right;margin-top: 5px;}
.owner-info-content{margin-top: 5px;}
.owner-info{padding: 10px;box-sizing:border-box;font-size: 0.8em;}
.commit-btn{background: #259B24;color: #FFFFFF;font-size: 0.8em;text-align: center;height: 30px;line-height: 30px;width: 110px;margin: 20px auto;border-radius: 5px;}
.success{font-size: 2em;color: #259B24;margin: 3rem 0;text-align: center;}
.ads{border-bottom: 1px #DDDDDD solid;padding-bottom:10px;}
.ads-title{font-weight: bold; }
.ads-edit{text-align: right;color: #259B24;}