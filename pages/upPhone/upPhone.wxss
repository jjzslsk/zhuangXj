/* pages/upPhone/upPhone.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.scroll-area {
  height: 100%;
}

.input-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 8px 10px;
  height: 35px;
  line-height: 35px;
  border-bottom: 1rpx solid #ddd;
}

.input-item .title {
  width: 30%;
  text-align: right;
}

.input-item .input-area {
  width: 70%;
  padding-left: 10px;
}

.input-sms-code {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 8px 10px;
  height: 35px;
  line-height: 35px;
  border-bottom: 1rpx solid #ddd;
}

.input-sms-code .title {
  width: 30%;
  text-align: right;
}

.input-sms-code .input-sms-code {
  width: 30%;
  padding-left: 10px;
}

.input-sms-code .get-sms-code {
  width: 40%;
  text-align: right;
}

.input-sms-code .get-sms-code text {
  border: 1rpx solid #ddd;
  padding: 5px 10px;
  font-size: 0.8em;
}

.input-sms-code .get-sms-code .disabled-sms-code {
  background-color: #f3f3f3;
  color: #cecece;
}

.submit-area {
  margin: 30px 10%;
  border-radius: 15px;
  background-color: #259b24;
}

.submit-area .submit-btn {
  padding: 8px 10px;
  height: 30px;
  line-height: 30px;
  margin-bottom: 30px;
  text-align: center;
  color: #fff;
}

.submit-btn-sel-bg {
  border-radius: 15px;
}
