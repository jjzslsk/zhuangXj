.cmt-score-cate .item text{font-size: 0.7em;color: #999999; }


.list-item{padding: 15px 10px 15px 0;background: #FFFFFF;overflow: hidden;border-bottom: 1px #DDDDDD solid;}
.list-user{width: 100%;overflow: hidden;}
.list-user-avatar{width:40px;height:40px;float: left;margin: 0 10px}
.list-user-text{float: left;width: calc(100% - 60px);}
.username{font-size: 0.8em;width: 100%;}
.username text{float: right;font-size: 0.7em;color: #999999;}
.post-time{font-size: 0.7em;color: #999999;}
.list-content{color: #666666;font-size: 0.8em;padding-left:60px;margin-top:5px; }
.commentlist-score{margin-top: 5px;}
.commentlist-score image{float: left;width:10px;height: 10px}
.scoreinfo2{float: left;margin-left: 10px;font-size: 0.7em !important;line-height: 10px;}

.list-area{height: calc(100% - 210px);box-sizing:border-box;}
.classify-item{padding: 10px;box-sizing:border-box;font-size: 0.7em;}
.classify-item-act{color: #259B24;}
.classify-list{ width: 30%;height: 100%;background-color: #f5f5f5;border-right: 1rpx solid #eee;text-align: center;box-sizing:border-box;}
.goods-list{ width: 70%;padding-left: 10px;height: 100%;background-color: #fff;padding-top: 30px;}
