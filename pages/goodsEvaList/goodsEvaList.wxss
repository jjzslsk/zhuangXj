.filter-item-act{color: #259B24;border-bottom: 2px #259B24 solid;}
.goods-scroll-area{height: calc(100% - 40px);margin-top: 10PX;}
.bg-body{background: #F5F5F5 !important;padding: 0 !important}
.shop-name-area{
  font-size: 0.8em;color: #666666;margin-top: 10px;
}
