/* pages/shopDetail/shopDetail.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.search-area{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 40px;
  line-height: 40px;
  max-height: 40px;
  padding: 0 15px;
}

.search-area .search {
  background-color: #FFFFFF;
  border-radius: 10rpx;
  width: calc(100% - 37px);
  height: 30px;
  line-height: 30px;
  max-height: 30px;
}

.search-area .search .hint {
  margin-left: 35px;
  height: 100%;
  color: #DDDDDD;
  font-size: 0.9em;
}

.search-area .search input {
  margin-left: 35px;
  height: 100%;
}

.search-area .searchcion {
  margin: 5px 0 0 5px;
  position: absolute;
  left: 15px;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.search-area .layout-type{
  margin-top: 5px;
  padding-top: 5px;
}
.search-area .layout-type image{
  width: 30px;
  height: 30px;
}

.tab-head{
  border-bottom: 1rpx solid #DDDDDD;
  border-top: 1rpx solid #DDDDDD;
  padding-right:30%; 
  background: #FFFFFF;
}

.scroll-area{
  height: 100%;
}

.list-item {
  padding: 10px 0;
  border-bottom: 1rpx solid #ddd;
  background-color: #FFFFFF;
}

.horizontal .icon {
  width: 35%;
  display: flex;
  justify-content: center;
}

.horizontal .icon image {
  width: 80%;
}

.horizontal .content {
  width: 65%;
}

.horizontal .content .content-item-mt {
  margin-top: 8px;
}

.new-price {
  color: #e91717;
}

.old-price {
  color: #cecece;
  text-decoration: line-through;
  font-size: 0.8em;
  margin-left: 20px;
}

.evaluate-area {
  color: #cecece;
  font-size: 0.8em; 
  display: flex;
  justify-content: space-between;
  padding-right: 10px;
}

.evaluate-area .good-eva {
  margin-left: 10px;
}

.horizontal{background: #FFFFFF;}
.horizontal .shop-icon {
  width: 20%;
  display: flex;
  justify-content: center;
  padding: 10px;
}

.horizontal .shop-icon image {
  width: 80%;
}

.horizontal .shop-content {
  width: 70%;
  padding: 10px;
}

.horizontal .shop-content .shop-content-item-mt {
  margin-top: 8px;
}

.shop-info {
  color: #cecece;
  font-size: 0.8em; 
  display: flex;
  justify-content: space-between;
  padding-right: 10px;
}
.open-btn{background: #259B24;width:50px;height:30px;line-height:30px;text-align: center;color:#FFFFFF;margin-top: -20px;border-radius: 5px;}
.shop-intro{
  box-sizing:border-box;
  /* margin-top: 10px; */
}
.intro-item{background: #FFFFFF;padding: 10px 0;font-size: 1em;}
.intro-title{border-left: 3px solid #259B24;padding-left: 10px;width: 100%;}
.intro-content{background: #FFFFFF;padding: 20px;font-size: 0.9em;}

.shop-info-item{width:100%;height:40px;border-bottom: 1px #EEEEEE solid;box-sizing:border-box;background: #FFFFFF;}
.shop-info-item .icon{width: 40px;position: absolute;}
.shop-info-item .icon image{width: 16px;height:16px;margin: 12px 0 12px 12px;}
.shop-info-item .icon-arrow{width: 40px;position: absolute;right: 0;margin-top: -40px;}
.shop-info-item .icon-arrow image{width: 14px;height:14px;margin: 13px 0 13px 13px;}
.shop-info-item .title{width: calc(100% - 80px);height:40px;margin:0 40px;font-size: 0.8em;line-height: 40px;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.margin-t-5{display:flex;justify-content:center;align-items:center;}
.margin-t-5 i-rate i-icon{display:flex;justify-content:center;align-items:center;
}
.margin-b-10{margin-bottom: 10px;}
.cmt-count{position: absolute;font-size: 0.6em;color: #999999;margin-top: -23px;left: 40%;}
.shop-header{width: calc(100% - 30px);margin: 0 15px;background: #FFFFFF;overflow: hidden;padding: 10px;box-sizing:border-box;}
.shop-header .name-item{width:100%;float: left;margin-bottom: 5px;}
.shop-header .name{font-size: 1em;float: left;margin-right: 10px;}
.shop-type{color: red;font-size: 0.7em;margin-left: 5px;}
.shop-header .level{font-size: 1em;float: left;margin-top: 5px;}
.shop-header .level image{width:20px;height: 20px;float: left;}
.shop-header .post{font-size: 0.7em;padding-left: 20px;margin-top:5px;color: #666666; }
.shop-header .post image{width: 15px;height:15px;position: absolute;left: 25px;margin-top: 27px;}
.shop-header .tips{font-size: 0.7em;margin-top:5px;color: #999999;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; }
.discount{padding: 15px 0;}
.discount-item{padding: 2px 8px;border:1px #EEEEEE solid;float: left;color: #FF6600;border-radius: 2px;font-size: 0.6em;margin-right: 10px;}

.header-bkg{position: absolute;top: 0;left: 0;width: 100%;}
.header-content{z-index: 99;width: 100%;overflow: hidden;position: relative;}
.like-icon{width:20px;}

.cmt-header{font-size: 0.7em;background: #FFFFFF;
  /* margin-top:10px; */
  width: 100%;
  overflow: hidden;
  padding: 10px 10px; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.cmt-header-score{float: left;width: 25%;text-align: center;}
.cmt-header-detail{float: left;width: 50%}
.cmt-header-pst{float: left;width: 25%;text-align: center;}
.cmt-score{font-size:2em;color: #FF6600;display: flex;align-items: center;justify-content: center;}
.cmt-score image{width: 4rem;height: 4rem;}
.cmt-score-tips{font-size:0.8em;color: #999999;}
.cmt-score-icon{position: absolute;margin-top: -15px;margin-left: 40px;}
.cmt-score-icon image{float: left;width:13px;height: 13px}
.cmt-pst{font-size:2em;color: #999999;}
.scoreinfo{float: left;font-size: 0.8em !important;line-height: 15px;width: 16px;}

.cmt-cate{padding: 0 5px; display: flex;flex-wrap: wrap;}
.cmt-tab{width: 100%;padding: 10px 25%;background: #FFFFFF;overflow: hidden;margin-top: 10px;}
