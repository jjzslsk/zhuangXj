/* pages/goodsEvaList/goodsEvaList.wxss */

.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.scroll-area {
  height: 100%;
}

.list-item-box {
  padding: 8px 10px !important;
}

.list-item {
  padding: 8px 10px;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
}

.list-item .head-info {
  display: flex;
}

.list-item .head-info .user-ava {
  /* width: 20%; */
  margin-right: 8px;
}

.list-item .head-info .user-ava image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.list-item .head-info .name-eva {
  /* width: 80%; */
  width: calc(100% - 48px);
}

.list-item .head-info .name-eva .s-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 20%;
}

.list-item .head-info .name-eva .name-time {
  display: flex;
  justify-content: space-between;
}

.list-item .head-info .name-eva .time-rate {
  width: 50%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.list-item .head-info .name-eva .name-time .time {
  color: #aaa;
  font-size: 0.8em;
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-item .eva-content {
  margin-top: 8px;
}

.list-item .eva-content-notes{
  margin-top: 8px;
  padding: 10px;
  background-color: rgb(218, 218, 218);
  color: rgb(71, 71, 71);
  font-size: 0.8em;
  border-radius: 4px;
}


.eva-att-img {
  margin-top: 10px;
}

.eva-att-img .eva-img-item {
  width: 90%;
  margin-top: 8px;
  display: flex;
  justify-content: flex-end;
}

.eva-att-img .eva-img-item image {
  height: 60px;
}

.footer-hint view {
  background: transparent;
}

