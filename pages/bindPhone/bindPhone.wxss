.submit-btn-area{margin-top: 20px}

.submit-btn-area .phone-bind-item{
  width: 40%;
  padding: 0 10px;
}

.submit-btn-area .login-item{
  width: 60%;
  padding: 0 10px;
}

.submit-btn{
  background-color: #259b24;
  text-align: center;
  color: #FFFFFF;
  height: 40px;
  line-height: 40px;
  max-height: 40px;
  border-radius: 8px;
}

.item-click-sel-bg{
  height: 100%;
  border-radius: 8px;
}

.iSpin {
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:rgba(102, 102, 102, 0.267);
  z-index: 1000;
}

.iSpin image{
  width: 100%;
  height: 100%;
  margin: auto;
  position: relative;
  top:30%;
  left:34%;
}


