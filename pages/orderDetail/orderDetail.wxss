/* pages/orderDetail/orderDetail.wxss */
.body-bg{
  width: 100vw;
  height: 100vh;
}

.scroll-area{
  height: calc(100% - 3rem - 1px);
  background-color: #f5f5f5;
}

.head-area{
  background-color: #259b24;
  padding: 10px 10px 20px 10px;
  text-align: center;
  color: #FFFFFF;
}

.head-area .order-state{
  font-weight: bold;
}

.head-area .timing-conf{
  font-size: 0.8em;
  margin-top: 5px;
}

.head-area .courier{
  margin-top: 5px;
}

.logistics-info{
  background-color: #FFFFFF;
  margin-top: -10px;
  border-radius: 10px;
  padding: 10px;
}

.item-row{
  display: flex;
  background-color: #FFFFFF;
  padding: 8px 0;
}

.item-row.border-b{
  border-bottom: 1px solid #DDDDDD;
}

.item-row .icon-logo{
  width: 30px;
}

.item-row .icon-logo image{
  width: 20px;
  height: 20px;
}

.item-row .item-info-click{
  width: calc(100% - 60px);
}

.item-row .item-info-click .title,.item-row .item-info .title{
  color: #000000;
}

.item-row .item-info-click .sub-title,.item-row .item-info .sub-title{
  color: #999999;
  font-size: 0.8em;
}

.item-row .arrow-r{
  width: 30px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.item-row .item-info{
  width: calc(100% - 30px);
}

.goods-info{
  margin-top: 10px;
  background-color: #FFFFFF;
  border-radius: 10px;
  padding: 10px;
}

.goods-info .shop-name{
  display: flex;
  padding: 8px 0;
}

.goods-info .shop-name text{
  margin: 0 5px;
}

.goods-info .goods-list {
  margin-top: 10px;
  background-color: #fff;
}

.goods-info .goods-list .goods-item {
  display: flex;
  padding: 8px 10px;
}

.goods-info .goods-list .goods-item .goods-img {
  width: 30%;
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.goods-info .goods-list .goods-item .goods-img image {
  height: 80px;
}

.goods-info .goods-list .goods-item .goods-content {
  width: 70%;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-info .goods-list .goods-item .goods-content .goods-name {
  margin-bottom: 10px;
}

.goods-info .goods-list .goods-item .goods-content .goods-name .spec-name {
  font-size: 0.8em;
  color: #6c6c6c;
  word-break:break-all; 
}

.distribution {
  color: #cecece;
  font-size: 0.9em;
}

.goods-info .goods-list .goods-item .goods-content .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.goods-info .goods-list .goods-item .goods-content .price-num .price {
  color: #6c6c6c;
  font-size: 14px;
}

.remark{
  padding: 0 10px;
  color:#999999;
  font-size: 0.8em;
}

.order-info{
  margin-top: 10px;
  background-color: #FFFFFF;
  border-radius: 10px;
  padding: 10px;
}

.order-info .order-info-title i-icon{
  margin-right:5px; 
}

.order-info .order-info-item{
  padding: 5px 0;
  display: flex;
  color: #999999;
  font-size: 0.8em;
}

.order-info .order-info-item .order-info-item-title{
  width: 6em;
}

.order-info .order-info-item .order-info-item-content{
  width: calc(100% - 6em);
}

.footer-btns{
  background-color: #FFFFFF;
  border-top: 1px solid #DDDDDD;
  width: 100%;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.footer-btns .btn-item{
  font-size: 0.7rem;
  color: #000000;
  border: 1px solid #000000;
  padding: 0.4rem 8px;
  margin: 0 5px;
  border-radius: 20px;
}

.page__hd {
  text-align: center;
  padding: 1rem 0;
}

.radio-group {
  border-bottom: 1px solid #ddd;
}

.radio-group .radio {
  display: block;
  border-top: 1px solid #ddd;
  padding: 10px;
}
