/* pages/confirmOrder/confirmOrder.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.scroll-area {
  height: calc(100% - 45px);
}

.address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 8px 10px;
}

.address .address-content {
  margin: 0 10px;
  width: calc(100% - 90px);
}

.address .address-content .user-phone {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.goods-list {
  margin-top: 10px;
  background-color: #fff;
}

.goods-list .shop-item {
  padding: 8px 10px;
}

.goods-list .goods-item {
  display: flex;
  padding: 8px 10px 0 10px;
}

.goods-list .goods-item .goods-img {
  width: 30%;
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.goods-list .goods-item .goods-img image{
  height: 80px;
}

.goods-list .goods-item .goods-content {
  width: 70%;
  padding: 0 10px;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-list .goods-item .goods-content .goods-name {
  margin-bottom: 10px;
}

.distribution {
  color: #cecece;
  font-size: 0.9em;
}

.goods-list .goods-item .goods-content .goods-name .spec-name {
  font-size: 0.8em;
  color: #6c6c6c;
}

.goods-list .goods-item .goods-content .price-num {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.goods-list .goods-item .goods-content .price-num .price {
  color: #e91717;
}

.goods-list .goods-item .goods-content .price-num .price .old-price {
  color: #cecece;
  text-decoration: line-through;
  font-size: 0.8em;
  margin-left: 2px;
}

.distribution-type-item{
  margin-top: 10px;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 10px;
}

.distribution-type-item .distribution-type{
  color: #AAAAAA;
}

.footer{
  display: flex;
  justify-content: space-between;
  background-color: #FFFFFF;
  border-top: 1rpx solid #DDDDDD;
  height: 44px;
  line-height: 44px;
  max-height: 44px;
}

.footer .total-money-item{
  width: 70%;
  text-align: right;
  padding: 0 20px 0 10px;
}

.footer .total-money-item .total-money{
  color: #e91717;
}

.footer .submit-order{
  width: 30%;
  text-align: center;
  background-color: #259b24;
  color: #FFFFFF;
}

.remark{
  margin-top: 10px;
  background-color: #FFFFFF;
  padding: 10px;
}

.remark input{
  padding: 5px;
  border: 1px solid #DDDDDD;
}