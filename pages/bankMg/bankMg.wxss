/* pages/bankMg/bankMg.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.add-btn{
  background-color: #259b24;
  color: #FFFFFF;
  height: 37px;
  line-height: 37px;
  max-height: 37px;
  text-align: right;
  padding: 0 10px;
}

.scroll-area{
  height:calc(100% - 37px);
}

.bank-item{
  background-color: #CECECE;
  margin: 15px;
  border-radius: 5px;
  padding: 10px 10px 30px 10px;
}

.bank-item .bank-info{
  display: flex;
}

.bank-item .bank-info .logo{
  width: 4rem;
}

.bank-item .bank-info .logo .logo-bg{
  background-color: #FFFFFF;
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bank-item .bank-info .logo .logo-bg image{
  width: 2rem;
  height: 2rem;
}

.bank-item .bank-info .logo .logo-bg text{
   color: #999999;
   font-size: 1rem;
}

.bank-item .bank-info .info-content{
  width: calc(100% - 4rem);
  color: #FFFFFF;
}

.bank-item .bank-info .info-content .bank-name{
  font-weight: bold;
}

.bank-item .bank-info .info-content .bank-type{
  font-size: 0.8em;
  margin-top: 5px;
}

.bank-item .bank-info .info-content .bank-num{
  font-size:1.2em;
  margin-top: 10px;
}