/* pages/myCollect/myCollect.wxss */
.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 50%;
  color: #434343;
}
 
.active {
  color: #259b24;
  border-bottom: 4rpx solid #259b24;
}


swiper {
  height:calc(100vh - 88rpx);
  background-color: #f5f5f5;
}

.scroll-area{
  height:100%;
}

.list-item {
  padding: 8px 0;
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
}

.goods-area .icon {
  width: 30%;
  display: flex;
  justify-content: center;
}

.goods-area .icon image {
  width: 80%;
  height: 80px;
}

.goods-area .content {
  width: 70%;
}

.goods-area .content .content-item-mt {
  margin-top: 8px;
}

.new-price {
  color: #e91717;
}

.old-price {
  color: #cecece;
  text-decoration: line-through;
  font-size: 0.8em;
  margin-left: 20px;
}

.evaluate-area {
  color: #cecece;
  font-size: 0.8em;
  display: flex;
  justify-content: space-between;
  padding-right: 10px;
}

.evaluate-area .good-eva {
  margin-left: 20px;
}

.shop-name-area{
  color: #cecece;
  font-size: 0.8em;
}

.shop-name-area .shop-type{color: red;font-size: 0.7em;margin-left: 5px;}


.shop-area .icon {
  width: 30%;
  display: flex;
  justify-content: center;
}

.shop-area .icon image {
  width: 80%;
  height: 80px;
}

.shop-area .content {
  width: 70%;
  /* line-height:80px; */
}


/* .shop-area .content .level {
  color: #a1a1a1;
  font-weight: lighter;
  font-size: 12px;
  padding: 4px 0;
} */

.shop-area .content .level {
  margin-top: 4px;
  display: flex;
  align-items: center;
}

.shop-area .content .level .shop-level{
  display: flex;
  align-items: center;
} 

.shop-area .content .level .shop-level image{
  width:15px;
  height:15px;
}

.shop-area .content .shop-notice{
  color: #a1a1a1;
  font-weight: lighter;
  font-size: 12px;
  padding: 4px 0;
}

.iSpin {
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:rgba(102, 102, 102, 0.267);
  z-index: 1000;
}

.iSpin image{
  width: 100%;
  height: 100%;
  margin: auto;
  position: relative;
  top:30%;
  left:34%;
}

.not-data-area{
  text-align: center;
  margin: 30px 20px 20px 20px;
  color: #999999;
}
