/* pages/goodsList/goodsList.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.search-area{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 40px;
  line-height: 40px;
  max-height: 40px;
  padding: 0 10px;
}

.search-area .search {
  background-color: #FFFFFF;
  border-radius: 10rpx;
  width: calc(100% - 37px);
  height: 30px;
  line-height: 30px;
  max-height: 30px;
}

.search-area .search .hint {
  margin-left: 35px;
  height: 100%;
  font-size: 0.9em;
}

.search-area .search .hint-color {
  color: #ddd;
}

.search-area .search input {
  margin-left: 35px;
  height: 100%;
}

.search-area .searchcion {
  margin: 5px 0 0 5px;
  position: absolute;
  left: 10px;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.search-area .layout-type{
  margin-top: 5px;
  padding-top: 5px;
}
.search-area .layout-type image{
  width: 30px;
  height: 30px;
}

.tab-head{
  border-bottom: 1rpx solid #DDDDDD;
}

.scroll-area{
  height: calc(100% - 82px);
}

.list-item {
  padding: 10px 0;
  border-bottom: 1rpx solid #ddd;
  background-color: #FFFFFF;
}

.horizontal .icon {
  width: 20%;
  display: flex;
  justify-content: center;
  padding: 10px;
}

/* .horizontal .icon image {
  width: 80%;
  border-radius: 50%;
} */

.horizontal .content {
  width: 70%;
  padding: 10px;
}

.horizontal .content .content-item-mt {
  margin-top: 8px;
}

.shop-info {
  color: #cecece;
  font-size: 0.8em; 
  display: flex;
  justify-content: space-between;
  padding-right: 10px;
}
.shop-name{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;padding-right: 60px;}
.no-data{text-align: center;padding: 15px;font-size: 0.8em;color: #999999;}
.open-btn{background: #259B24;width:50px;height:30px;line-height:30px;text-align: center;color:#FFFFFF;margin-top: -20px;border-radius: 5px;}
.product-list{padding: 10px 0 0 0;display: flex;justify-content: space-between;width:100%;}
.product-item{display: flex;justify-content: center;width:33.333333%;padding: 10px; box-sizing:border-box}
.product-item image{height:80px;margin: 0 10px;width:100%;}
.product-price{position: absolute;background: rgba(0,0,0,0.4);font-size: 0.6em;color:#FFFFFF;width:40px;height:20px;line-height:20px;margin-top: 60px;margin-left: 15px;}

.shop-avatar{width:60px;height:60px;border-radius: 50%;}