/* pages/addBank/addBank.wxss */
.body-bg {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.choose-item {
  padding: 0 0 0 15px;
  background-color: #fff;
}

.choose-item .item-content {
  padding: 12px 0;
  color: #495060;
  width: 100%;
  font-size: 14px;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e9eaec;
}

.choose-item .item-content .title {
  min-width: 65px;
  padding-right: 10px;
}

.choose-item .item-content .content{
   width: calc(100% - 90px);
}

.choose-item .item-content .please-sel{
   color:#80848f;
}

.choose-item .item-content .icon {
  padding-right: 8px;
}

.submit-info{
  margin: 30px 20%;
  width: 60%;
  background-color: #259b24;
  color: #FFFFFF;
  text-align: center;
  padding: 8px 10px;
  border-radius: 20px;
}